<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.xmp.modules.system.mapper.DeptMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="cn.xmp.modules.system.entity.Dept">
        <id column="DEPT_ID" property="deptId" />
        <result column="PARENT_ID" property="parentId" />
        <result column="DEPT_NAME" property="deptName" />
        <result column="ORDER_NUM" property="orderNum" />
        <result column="CREATE_TIME" property="createTime" />
        <result column="MODIFY_TIME" property="modifyTime" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        DEPT_ID AS deptId, PARENT_ID AS parentId, DEPT_NAME AS deptName, ORDER_NUM AS orderNum, CREATE_TIME AS createTime, MODIFY_TIME AS modifyTime
    </sql>

</mapper>
